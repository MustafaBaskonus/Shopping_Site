@{
    ViewData["Title"] = "Add";
}
@model ProductViewModel
<h1>Ürün Ekleme</h1>
<div asp-validation-summary="ModelOnly">
</div>

<form a asp-controller="Products" asp-action="Add" method="post">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Ürün ismi</label>
        <input class="form-control" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Ürün fiyatı</label>
        <input class="form-control" asp-for="Price">
        <span class="text-danger" asp-validation-for="Price"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label">Ürün Stok</label>
        <input type="number" class="form-control" asp-for="Stock">
        <span class="text-danger" asp-validation-for="Stock"></span>

    </div>
    <div class="mb-3">
        @* <label asp-for="Color" class="form-label">Ürün Rengi</label>
        <input class="form-control" asp-for="Color">*@
        <select class="form-select" asp-for="Color" asp-items="ViewBag.ColorSelect"></select>
        <options value="">Renk seçiniz</options>
        <span class="text-danger" asp-validation-for="Color"></span>

    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="IsPublish">
        <label class="form-check-label" asp-for="IsPublish">
            Yayınlasın mı?
        </label>
    </div>
    <div class="mb-3 mt-3">
        <span>Ürün kaç ay satışta kalacak ?</span>
        @foreach (var item in ViewBag.Expire as Dictionary<string, int>)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" id="@(item.Value)Expire" asp-for="Expire" value="@item.Value">
                <label class="form-check-label" asp-for="Expire" for="@(item.Value)Expire">
                    @item.Key
                </label>
            </div>
        }
        <span class="text-danger" asp-validation-for="Expire"></span>

    </div>



    <div class="form-floating">
        <textarea class="form-control" asp-for="Description" placeholder="ürün bilgi" style="height: 100px"></textarea>
        <label app-for="Description">Ürün bilgi</label>
        <span class="text-danger" asp-validation-for="Description"></span>

    </div>

    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label">Ürün yayınlanma tarihi</label>
        <input me" class="form-control" asp-for="PublishDate">
        <span class="text-danger" asp-validation-for="PublishDate"></span>

    </div>


   @* <div class="mb-3">
        <label asp-for="EmailAdress" class="form-label">EmailAdress</label>
        <input class="form-control" asp-for="EmailAdress">
        <span class="text-danger" asp-validation-for="EmailAdress"></span>
    </div>
*@
    <div class="mb-3 mt-3">

        <button type="submit" class="btn btn-primary">Ürün Kaydet</button>@* ürünleri kayıt eder*@
    </div>
</form>



@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
